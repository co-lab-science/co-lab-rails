
.intro-graphic{
  height: 400px;
  width: 100%;
  background-color: #ededed;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: #1b79be solid 7px;
}

.intro-graphic-logo{
  width: 300px;
  position: absolute;
  z-index: 1;
}

circle:hover, text:hover, li:hover {
    cursor: pointer;
}

section.intro-search{
  text-align: center;
}
.intro-searchbar{
  border: #1b79be solid 7px;
    padding: 15px 30px;
    border-radius: 30px;
    display: inline-block;
    margin-top: 7px;
}
.get-started{
  border: #1b79be solid 7px;
    padding: 15px 30px;
    border-radius: 30px;
    margin: 15% auto;
    display: block;
    width: 50%;
  background-color: #ededed;
  font-size: 25px;
    font-weight: bold;
    color: #1b79be;
}
