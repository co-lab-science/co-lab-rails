/* general */
body{
	margin: 0;
	padding: 0;
    color: #676767 !important;
}

main{
    display: flex;
    flex: horizontal;
    justify-content: space-between;
}

h1{
    color: #1b79be;
    line-height: 45px;
}

li{
    list-style-type: none;
}

section.text{
    padding: 60px 20%;
}
section.centered{
    text-align: center;
}

/*header + footer */

nav, footer{
    background-color: white;
    color:#f8f8f8;
    height: 70px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
nav{
	border-bottom: #1b79be solid 7px;
}

footer{
	border-top: #1b79be solid 7px;
}

nav a, footer a{
	color: #1b79be;
    text-decoration: none;
}
a:hover{
    text-decoration: none !important;
}
.logo{
	height:40px;
	padding: 10px;
    float: right;
}
.logo img{
    height:40px;;
}
footer .logo{
    padding:17px 25px;
}
.login ul, .terms ul{
	display: flex;
}

.login ul{
    justify-content: flex-end;
    padding: 27px 30px;
}

.terms{
    display:inline-block;
    width:50%;
}

.terms ul{
    justify-content: flex-start;
    padding: 0;
    margin: 30px 15px;
}

.login li, .terms li {
    margin: -5px 0 0 15px;
}

.login .nav-profile{
    height: 40px;
    margin: -15px 0;
}
label{
    color:#1b79be;
}

.blue-border{
	border: #1b79be solid 4px;
	border-radius: 30px;
	letter-spacing:0;
	transition: letter-spacing 0.25s, border-radius 0.25s;
}
.rounded{
	border-radius: 30px;
    margin: 5px 4px;
    padding: 7px 18px;

}
.white{
	font-size: 12px;
    display: inline-block;
    cursor: pointer;
}
.blue-border:hover{
    border-radius: 3px;
    letter-spacing: 1.125px;
}
.comment p{
	margin: 15px 4px;
}

.tips{
	display:none;
	margin: 15px 4px 30px;
	opacity: 0.65;

}
.tips.show{
	display:block;
}
.js-tips{
	cursor:pointer;
}
input[type=submit]{
    background-color: #F3F3F3;
    border: #1b79be solid 7px;
    padding: 10px 30px;
    border-radius: 30px;
    letter-spacing: 0;
    transition: letter-spacing 0.25s, border-radius 0.25s;
}

input[type=submit]:hover{
	letter-spacing: 1.125px;
    border-radius: 3px;
}
.comment-type{
    border: #1b79be solid 4px;
    border-radius: 3px;
    padding: 7px 9px;
    font-size: 12px;
    display: inline-block;
    margin: 5px 4px;
    cursor: pointer;
    transition: background-color 0.25s;
}
.comment-type:hover{
    background-color:rgba(27, 121, 190, .2);
}
.comment-type.selected{
    background-color: #1b79be;
    color: #fff;

}

.trending, .applied{
    background-color:rgba(27, 121, 190, .2);
}

.trending.static{
    cursor: default;
}
