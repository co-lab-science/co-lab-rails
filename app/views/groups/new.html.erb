<section class="text centered">
<h1>Create a New Group</h1>
<p>You will automatically become the group's admin.</p>
<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this question from being saved:</h2>
      <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :admin_id, value: current_user.id %>

  Group Name:
   <br>
  <%= f.text_field :name %>
